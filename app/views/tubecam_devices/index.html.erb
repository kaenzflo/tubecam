<p id="notice"><%= notice %></p>

<h1>Tubecam Devices</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Serialnumber</th>
      <th>User ID</th>
      <th>Description</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tubecam_devices.each do |tubecam_device| %>
      <% user = tubecam_device.user %>
      <tr>
        <td><%= tubecam_device.id %></td>
        <td><%= tubecam_device.serialnumber %></td>
        <td>
          <%= user.username %> (<%= user.id %>)
        <td><%= tubecam_device.description %></td>
        <td><%= tubecam_device.active %></td>
        <td><%= link_to 'Show', tubecam_device %></td>
        <td><%= link_to 'Edit', edit_tubecam_device_path(tubecam_device) %></td>
        <td><%= link_to 'Destroy', tubecam_device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

