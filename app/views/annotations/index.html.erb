

<table class="table table-striped table-sm table-responsive table-hover">
  <thead>
  <tr>
    <th>Benutzer</th>
    <th>Annotation</th>
    <th>Bearbeiten</th>
    <% if user_signed_in? && @user.verified_spotter_role? %>
        <th>Verifikation</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <% @annotations.each do |annotation| %>
      <tr>
        <td><%= @users.find(annotation.user_id).username %></td>
        <td>
          <% %>
          <%= @annotations_lookup_table.find(annotation.annotations_lookup_table_id).annotation_id %>
          <% %>
        </td>
        <% if user_signed_in? && (current_user.id == annotation.user_id  || current_user.admin_role?) %>
            <td><%= link_to 'löschen', :controller => 'annotations', :action => 'destroy', :id => annotation.id %></td>
            <% else %>
        <td></td>
        <% end %>
        <% if user_signed_in? && @user.verified_spotter_role?  %>
            <% if annotation.verified_id.nil? %>
                <td><%= link_to 'bestätigen', :controller => 'annotations', :action => 'confirm_verification', :id => annotation.id %></td>
            <% else %>
                <td><%= link_to 'entfernen', :controller => 'annotations', :action => 'delete_verification', :id => annotation.id %></td>
            <% end %>
        <% end %>

      </tr>
  <% end %>
  </tbody>
</table>