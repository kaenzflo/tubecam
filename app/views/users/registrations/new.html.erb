<h2><%= t '.title' %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, required: true %>
    </div>

    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, required: true %><br/>
      <em><%= t '.message' %></em>
    </div>


    <div class="field">
      <%= f.label :firstname %>
      <%= f.text_field :firstname, required: true %>
    </div>

    <div class="field">
      <%= f.label :lastname %>
      <%= f.text_field :lastname, required: true %>
    </div>

    <div class="form-group">
      <div class="form-inline">
        <div class="form-group">
          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", minlength: @minimum_password_length %><br/>
            <% if @minimum_password_length %>
                <em><%= t '.password_length', length: @minimum_password_length %></em>
            <% end %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", minlength: @minimum_password_length %>
            <br/>
            <em>&nbsp;</em>
          </div>
        </div>
      </div>
    </div>

    <br/>

    <div class="actions">
      <%= f.submit (t 'action.register'), class: 'btn btn-primary' %>
    </div>
<% end %>

<br />

<%= render "users/shared/links" %>
