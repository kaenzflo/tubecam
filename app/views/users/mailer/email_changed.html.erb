<p><%= t 'devise.mailer.email_changed.greeting', firstname: @resource.firstname, lastname: @resource.lastname %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t 'devise.mailer.confirmation_instructions.instruction', email: @resource.unconfirmed_email %></p>
<% else %>
  <p><%= t 'devise.mailer.confirmation_instructions.instruction2', email: @resource.email %></p>
<% end %>
