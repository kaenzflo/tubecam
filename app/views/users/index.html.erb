<h1>Spotters</h1>

<table class="table table-striped table-sm table-responsive table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Username</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Email</th>
      <th>Spotter</th>
      <th>Verified Spotter</th>
      <th>Trapper</th>
      <th>Admin</th>
      <th>Active</th>
      <% if can? :manage, User %>
        <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tfoot>
  <tr>
    <th>#</th>
    <th>Username</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Spotter</th>
    <th>Verified Spotter</th>
    <th>Trapper</th>
    <th>Admin</th>
    <th>Active</th>
    <% if can? :manage, User %>
        <th colspan="3"></th>
    <% end %>
  </tr>
  </tfoot>

  <tbody>
    <% @users.each do |user| %>

      <tr <%= !user.active ? ' class=text-gray' : '' %> >
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.firstname %></td>
        <td><%= user.lastname %></td>
        <td><%= user.email %></td>
        <td><%= user.spotter_role ? '✔' : '-' %></td>
        <td><%= user.verified_spotter_role ? '✔' : '-' %></td>
        <td><%= user.trapper_role ? '✔' : '-' %></td>
        <td><%= user.admin_role ? '✔' : '-' %></td>
        <td><%= user.active ? '✔' : '-' %></td>
        <% if can? :manage, User %>
          <td><%= link_to 'Bearbeiten', edit_user_path(user) %></td>
          <td><%= link_to 'Löschen', user, method: :delete, data: { confirm: 'Soll der Benutzer "' + user.firstname.to_s + ' ' + user.lastname.to_s + '" mit der Id "' + user.id.to_s + '" wirklich gelöscht werden?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
